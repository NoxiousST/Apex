<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="@dimen/m4"
    app:cardCornerRadius="@dimen/m12"
    app:cardElevation="5dp">


    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_rounded_radius_none"
        android:padding="@dimen/m12">

        <ImageView
            android:layout_marginVertical="20dp"
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_jne" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/musticaprosemibold"
            android:text="Rp. 16.000"
            android:textFontWeight="900"
            android:textColor="@color/whiteAccent"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tvType"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/tvEst"
                android:fontFamily="@font/louis_george_cafe_bold"
                android:text="(Ekonomi)"
                android:textFontWeight="900"
                android:textColor="@color/whiteAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEst"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/louis_george_cafe_bold"
                android:text="3-6 Hari"
                android:textAlignment="textEnd"
                android:textColor="@color/whiteAccent"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>