<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m12"
    app:cardCornerRadius="0dp">

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:translationZ="@dimen/m8"
        app:dividerColor="@color/green" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:translationZ="@dimen/m4"
        app:dividerColor="#22FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:translationZ="@dimen/m4"
        android:layout_height="match_parent">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            app:dividerColor="#22FFFFFF" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBackground"
        android:padding="@dimen/m12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/m12"
                    android:adjustViewBounds="true"
                    android:paddingTop="@dimen/m4"
                    android:src="@drawable/shopping_bag"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/musticaprosemibold"
                        android:text="Belanja"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/louis_george_cafe_bold"
                        android:text="24 Desember 2022"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/nexabold"
                        android:paddingHorizontal="@dimen/m8"
                        android:paddingVertical="@dimen/m4"
                        android:text="Success"
                        android:textColor="@color/darkBackground" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="@dimen/m8"
                app:dividerColor="#11FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firstParent"
                    android:layout_width="@dimen/m56"
                    android:layout_height="@dimen/m56"
                    android:src="@drawable/epic"
                    android:translationZ="@dimen/m12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/m12"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/m4"
                        android:fontFamily="@font/musticaprosemibold"
                        android:text="SteelSeries Arctic 5 Pro"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/louis_george_cafe_bold"
                        android:text="Rp. 20.000.000"
                        android:textColor="@color/whiterAccent"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>